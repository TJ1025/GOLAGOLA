<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MyWeather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/toss_blue</item>
        <item name="colorPrimaryVariant">@color/toss_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item> <item name="colorSecondary">@color/toss_blue</item>
        <item name="colorOnSecondary">@color/white</item> <item name="android:statusBarColor">@color/window_background_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:windowBackground">@color/window_background_light</item>

        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_gray</item>

        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <style name="Theme.MyWeather" parent="Base.Theme.MyWeather" />

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item> <item name="cardCornerRadius">16dp</item> <item name="cardBackgroundColor">@color/card_background_white</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item> <item name="backgroundTint">@color/toss_blue</item> <item name="cornerRadius">12dp</item> <item name="android:paddingTop">14dp</item> <item name="android:paddingBottom">14dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:letterSpacing">0</item> <item name="textAllCaps">false</item> </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/toss_blue</item> <item name="hintTextColor">@color/toss_blue</item> <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>
</resources>